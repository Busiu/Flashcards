<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <Button
        android:id="@+id/button_known_flashcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="znane fiszki" />

    <Button
        android:id="@+id/button_unknown_flashcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_known_flashcards"
        android:layout_centerHorizontal="true"
        android:text="nieznane fiszki" />

    <Button
        android:id="@+id/button_add_flashcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_unknown_flashcards"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="dodaj fiszkę" />

    <Button
        android:id="@+id/button_add_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_add_flashcard"
        android:layout_centerHorizontal="true"
        android:text="dodaj kategorię" />

</RelativeLayout>